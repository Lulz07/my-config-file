set number
set ttyfast
set ttyscroll=3
set nocompatible
filetype on
filetype indent on
set tabstop=4
set nowrap
set shiftwidth=4
set expandtab
set listchars=trail:~
set list
set belloff=all
set nobackup
set history=10
set noswapfile
set nowb
set textwidth=80
set synmaxcol=80
set lazyredraw
set scrolloff=10
syntax off
set showmode
set showcmd
set backspace=indent,eol,start
set incsearch
set encoding=utf8
set ffs=unix,dos,mac
set autoindent
set smarttab
set statusline=
set statusline+=\%F\ %M\ %Y\ %l\ %c\ %{&fileencoding?&fileencoding:&encoding}
set statusline+=\[%{&fileformat}\]
set laststatus=2
